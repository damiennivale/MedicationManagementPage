<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.medicationmanagementpage">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.App">

        <!-- Main Activity: Entry point of the application -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity for Medication Management -->
        <activity
            android:name=".ActivityMedicationManagement"
            android:exported="true" />

        <!-- Activity for Choose Medication type -->
        <activity
            android:name=".ActivityChooseMedicationType"
            android:exported="true" />

        <!-- Activity for Reminder Settings -->
        <activity
            android:name=".ActivityReminder"
            android:exported="true" />

        <!-- Activity for Home
        <activity
            android:name=".HomeActivity"
            android:exported="true" /> -->

    </application>

</manifest>
